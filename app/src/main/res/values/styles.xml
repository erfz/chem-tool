<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EquationInput.Button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#546e7a</item>
        <item name="colorControlHighlight">#33FFFFFF</item>
    </style>

    <style name="Balance.Button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:disabledAlpha">.4</item>
        <item name="colorControlHighlight">#40000000</item>
    </style>

</resources>
