<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="2dp"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    tools:showIn="@layout/fragment_chem_utils">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/equationpaste_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equationpaste_button"
            android:textAllCaps="false"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance_button"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/rightpaste_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionModePasteDrawable"
            android:minHeight="48dp"
            android:minWidth="44dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/leftEquation"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline"
            app:layout_constraintHorizontal_bias="0.6"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/leftpaste_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionModePasteDrawable"
            android:minHeight="48dp"
            android:minWidth="44dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/leftEquation"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/vertical_guideline"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.4"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <EditText
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/LHSEqnHint"
            android:id="@+id/leftEquation"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+()[] "
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/equation_yields_symbol"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/equation_yields_symbol"
            android:id="@+id/equation_yields_symbol"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/leftEquation" />

        <EditText
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/RHSEqnHint"
            android:id="@+id/rightEquation"
            android:singleLine="true"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+() "
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/equation_yields_symbol"
            app:layout_constraintHorizontal_bias="0.0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/clear_button"
            android:id="@+id/clear_button"
            app:layout_constraintTop_toBottomOf="@+id/balance_button"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/balance_button"
            android:id="@+id/balance_button"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plus_button"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:text="@string/parentheses_button"
            android:minHeight="50dp"
            android:minWidth="44dp"
            android:textSize="20sp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parentheses_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/leftEquation"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline" />

        <Button
            android:minHeight="50dp"
            android:minWidth="44dp"
            android:textSize="20sp"
            android:text="@string/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plus_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/leftEquation"
            app:layout_constraintRight_toLeftOf="@+id/vertical_guideline" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="192dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>